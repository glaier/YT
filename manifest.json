{
  "manifest_version": 3,
  "name": "YouTube Video Filter",
  "version": "1.0",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["style.css"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["keywords.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
